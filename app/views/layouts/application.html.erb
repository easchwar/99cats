<!DOCTYPE html>
<html>
<head>
  <title>NinetyNineCats</title>
  <%#= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap-theme.min.css">
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if current_user %>
  <nav class="navbar navbar-inverse">
    <div class="container-fluid">
      <div class="nav navbar-nav" style="font-size: 40px; color: #fff">
        <%= current_user.user_name %>
      </div>
      <div class="navbar-right">
        <%= button_to 'Logout', session_url, method: :delete, class: 'btn btn-lg btn-danger' %>
      </div>
    </div>
  </nav>
<% else %>
  <%= link_to 'Go to sign in page', new_session_url, class: 'btn btn-primary', role: "button" %>
<% end %>

<% flash.each do |type, messages| %>
  <% messages.each do |message| %>
   <div><%= message %></div>
 <% end %>
<% end %>
<div class="container-fluid">
  <%= yield %>
</div>
</body>
</html>
